<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cristianrosas.controller.FormCategoriaProductosController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoCategoriaProductos.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfCategoriaProductosId" editable="false" layoutX="14.0" layoutY="193.0" prefHeight="35.0" prefWidth="217.0" promptText="Id de la categoria del producto" />
      <TextField fx:id="tfNombreCategoria" layoutX="14.0" layoutY="317.0" prefHeight="35.0" prefWidth="217.0" />
      <TextArea fx:id="taDescripcionCategoria" layoutX="42.0" layoutY="493.0" prefHeight="165.0" prefWidth="300.0" wrapText="true" />
      <Button fx:id="btnAgregar" layoutX="390.0" layoutY="390.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="90.0" style="-fx-background-color: green; -fx-background-radius: 10;" text="Agregar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="btnCancelar" layoutX="390.0" layoutY="510.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="90.0" style="-fx-background-color: red; -fx-background-radius: 10;" text="Cancelar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
