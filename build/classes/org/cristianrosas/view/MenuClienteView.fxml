            </Button>
            <Button fx:id="btnEditar" layoutX="10.0" layoutY="19.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="50.0" prefWidth="180.0" style="-fx-background-radius: 20; -fx-background-color: green;" text="Editar" textFill="WHITE" GridPane.rowIndex="1">
