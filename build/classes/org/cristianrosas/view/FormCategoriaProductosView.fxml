<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cristianrosas.controller.FormCategoriaProductosController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoCategoriaProductos.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfCategoriaProductosId" editable="false" layoutX="27.0" layoutY="199.0" prefHeight="27.0" prefWidth="290.0" promptText="Id de la categoria del producto" />
      <TextField fx:id="tfNombreCategoria" layoutX="36.0" layoutY="312.0" prefHeight="36.0" prefWidth="282.0" />
      <TextArea fx:id="taDescripcionCategoria" layoutX="36.0" layoutY="490.0" prefHeight="180.0" prefWidth="319.0" wrapText="true" />
      <Button fx:id="btnAgregar" layoutX="395.0" layoutY="348.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="60.0" prefWidth="90.0" style="-fx-background-color: green;" text="Agregar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="btnCancelar" layoutX="386.0" layoutY="468.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="60.0" prefWidth="90.0" style="-fx-background-color: red;" text="Cancelar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
