<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cristianrosas.controller.MenuComprasController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoMenuCompras.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfCompraId" editable="false" layoutX="34.0" layoutY="339.0" prefHeight="36.0" prefWidth="269.0" promptText="Id de la compra" />
      <TextField fx:id="tfFecha" layoutX="410.0" layoutY="339.0" prefHeight="36.0" prefWidth="269.0" />
      <TextField fx:id="tfTotal" layoutX="813.0" layoutY="339.0" prefHeight="36.0" prefWidth="261.0" />
      <TableView fx:id="tblCompras" layoutX="34.0" layoutY="432.0" onMouseClicked="#cargarDatosEditar" prefHeight="256.0" prefWidth="469.0">
        <columns>
          <TableColumn fx:id="colCompraId" prefWidth="75.0" text="compraId" />
          <TableColumn fx:id="colFecha" prefWidth="184.0" text="fecha" />
            <TableColumn fx:id="colTotal" minWidth="0.0" prefWidth="209.0" text="total" />
        </columns>
      </TableView>
      <Button fx:id="btnGuardar" layoutX="555.0" layoutY="528.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="90.0" style="-fx-background-radius: 10; -fx-background-color: GREEN;" text="Guardar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="btnEliminar" layoutX="668.0" layoutY="524.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="90.0" style="-fx-background-radius: 10; -fx-background-color: RED;" text="Eliminar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button layoutX="780.0" layoutY="524.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="90.0" style="-fx-background-radius: 10; -fx-background-color: blue;" text="Reporte" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="btnRegresar" layoutX="899.0" layoutY="528.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="90.0" style="-fx-background-radius: 10; -fx-background-color: green;" text="Regresar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="btnVaciar" layoutX="1018.0" layoutY="528.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="90.0" style="-fx-background-radius: 10; -fx-background-color: grey;" text="Vaciar" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
