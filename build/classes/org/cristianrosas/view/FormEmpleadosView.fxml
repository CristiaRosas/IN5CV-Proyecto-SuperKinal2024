   <children>
      <ImageView fitHeight="700.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoFormularioEmpleados.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfEmpleadoId" editable="false" layoutX="19.0" layoutY="124.0" prefHeight="26.0" prefWidth="230.0" promptText="Id del empleado" />
      <TextField fx:id="tfNombre" layoutX="19.0" layoutY="200.0" prefHeight="26.0" prefWidth="230.0" />
      <TextField fx:id="tfApellido" layoutX="19.0" layoutY="274.0" prefHeight="26.0" prefWidth="230.0" />
      <TextField fx:id="tfSueldo" layoutX="19.0" layoutY="350.0" prefHeight="26.0" prefWidth="230.0" />
      <TextField fx:id="tfEntrada" layoutX="19.0" layoutY="424.0" prefHeight="26.0" prefWidth="230.0" />
      <TextField fx:id="tfSalida" layoutX="19.0" layoutY="494.0" prefHeight="25.0" prefWidth="230.0" />
