         <font>
            <Font size="14.0" />
         </font></Button>
      <ComboBox fx:id="cmbCargo" layoutX="35.0" layoutY="567.0" prefHeight="25.0" prefWidth="230.0" />
      <ComboBox fx:id="cmbEncargado" layoutX="35.0" layoutY="648.0" prefHeight="25.0" prefWidth="230.0" />
   </children>
</AnchorPane>
