<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cristianrosas.controller.LoginController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoFormLogin.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfUser" layoutX="96.0" layoutY="227.0" prefHeight="32.0" prefWidth="307.0" promptText="Usuario" style="-fx-background-radius: 15;">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </TextField>
      <PasswordField fx:id="tfPassword" layoutX="97.0" layoutY="405.0" prefHeight="32.0" prefWidth="307.0" promptText="Contraseña" style="-fx-background-radius: 15;">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnIniciar" layoutX="111.0" layoutY="505.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" prefWidth="130.0" style="-fx-background-color: blue; -fx-background-radius: ;" text="Iniciar Sesión" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Elephant" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnRegistar" alignment="CENTER" disable="true" layoutX="273.0" layoutY="505.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" prefWidth="130.0" style="-fx-background-color: red; -fx-background-radius: ;" text="Registrar Usuario" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Elephant" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
